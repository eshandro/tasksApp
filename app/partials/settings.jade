section.settings
	form(name='settings', ng-submit='saveSettings()')
		label(for='name') Your Name
		input(type='text', name='name', ng-model='name')
		label(for='color_scheme') Color Scheme
		select(name='color_scheme', ng-model='colorScheme')
			option Blue
			option Red
			option Green
		input(type='submit', value='Save Settings')
		input(type='reset', value='Reset All Data', ng-click='resetSettings()')